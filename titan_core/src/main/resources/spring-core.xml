<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="com.cjwx.titan.engine.core"/>

    <import resource="classpath:spring-hibernate.xml"/>
    <import resource="classpath:spring-reids.xml"/>

    <bean id="fileTool" class="com.cjwx.titan.engine.util.file.FileTool">
        <property name="ftpURL" value="${ftp.ftpURL}"/>
        <property name="ftpPort" value="${ftp.ftpPort}"/>
        <property name="ftpAdmin" value="${ftp.ftpAdmin}"/>
        <property name="ftpPassword" value="${ftp.ftpPassword}"/>
        <property name="maxFileSize" value="${ftp.maxFileSize}"/>
        <property name="ftpRootPath" value="${ftp.ftpRootPath}"/>
        <property name="fileFormat" value="${ftp.fileFormat}"/>
    </bean>

    <bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <!-- 线程池维护线程的最少数量 -->
        <property name="corePoolSize" value="5"/>
        <!-- 线程池维护线程所允许的空闲时间 -->
        <property name="keepAliveSeconds" value="30000"/>
        <!-- 线程池维护线程的最大数量 -->
        <property name="maxPoolSize" value="1000"/>
        <!-- 线程池所使用的缓冲队列 -->
        <property name="queueCapacity" value="200"/>
    </bean>

    <bean id="httpConstant" class="com.cjwx.titan.engine.core.constant.HttpConstant">
        <property name="VERSION" value="0.0.1"/>
        <property name="EXCLUSIONS">
            <list>
                <value>/system/user/token</value>
            </list>
        </property>
    </bean>
</beans>