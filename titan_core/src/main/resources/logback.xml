<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property resource="/config/sys.properties" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/bsdyun-ecom-oms/oms.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/aip/core.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.web.client.RestTemplate" level="${log.level}" />

    <logger name="jdbc.sqltiming" level="${log.level}" />

    <root level="${log.level}">
        <appender-ref ref="console" />
        <appender-ref ref="rollingFile" />
    </root>
</configuration>